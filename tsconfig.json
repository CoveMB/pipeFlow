{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "removeComments": true,
    "skipLibCheck": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "pretty": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "stripInternal": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "typeRoots": [
      "src/types/*",
      "node_modules/@types"
    ]
  },
  "compileOnSave": true,
  "include": [
    "./src",
  ]
}